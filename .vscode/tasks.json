{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "npm",
      "script": "build",
      "group": "build",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "dev",
      "type": "npm",
      "script": "dev",
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*vite.*$",
          "endsPattern": "^.*ready in.*$"
        }
      }
    },
    {
      "label": "dev:electron",
      "type": "npm",
      "script": "dev:electron",
      "group": "build",
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "test",
      "type": "npm",
      "script": "test",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "test:watch",
      "type": "npm",
      "script": "test:watch",
      "group": "test",
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "lint",
      "type": "npm",
      "script": "lint",
      "group": "test",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "lint:fix",
      "type": "npm",
      "script": "lint:fix",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "type-check",
      "type": "npm",
      "script": "type-check",
      "group": "build",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "verify",
      "type": "npm",
      "script": "verify",
      "group": "test",
      "problemMatcher": ["$tsc", "$eslint-stylish"]
    },
    {
      "label": "package:linux",
      "type": "npm",
      "script": "package:linux",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "clean",
      "type": "npm",
      "script": "clean",
      "problemMatcher": []
    }
  ]
}
